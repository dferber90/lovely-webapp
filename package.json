{
  "name": "wa",
  "private": true,
  "root": true,
  "author": "Dominik Ferber <dominik.ferber+npm@gmail.com> (http://dferber.de/)",
  "license": "MIT",
  "scripts": {
    "build": "webpack --config webpack/config.prod.js",
    "postbuild": "rm dist-production/frontend/assets/*.map",
    "e2e": "env-cmd .runtime.e2e.env ./scripts/e2e.sh",
    "e2e:dev": "env-cmd .runtime.e2e.env ./scripts/e2e-dev.sh",
    "lint": "eslint packages cypress",
    "playground": "graphql playground",
    "prebuild": "node scripts/create-package-json.js",
    "prisma": "prisma",
    "cypress": "cypress",
    "start": "./scripts/run-dev.sh .runtime.dev.env",
    "start:client": "webpack-serve --config webpack/config.client.dev.js",
    "start:api": "webpack --watch --config webpack/config.api.dev.js",
    "start:server": "webpack --watch --config webpack/config.server.dev.js",
    "start:build:dev": "env-cmd .runtime.dev.env ./scripts/run-prod.sh",
    "start:build:e2e": "env-cmd .runtime.e2e.env ./scripts/run-prod.sh",
    "test": "wsrun test"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@babel/core": "7.0.1",
    "babel-eslint": "9.0.0",
    "babel-jest": "23.6.0",
    "babel-loader": "8.0.2",
    "clean-webpack-plugin": "0.1.19",
    "compression-webpack-plugin": "1.1.11",
    "concurrently": "4.0.1",
    "connect-history-api-fallback": "1.5.0",
    "copy-webpack-plugin": "4.5.2",
    "cypress": "2.1.0",
    "env-cmd": "8.0.2",
    "envfile": "2.3.0",
    "eslint": "5.6.0",
    "eslint-config-airbnb": "17.1.0",
    "eslint-config-prettier": "3.0.1",
    "eslint-plugin-chai-friendly": "0.4.1",
    "eslint-plugin-cypress": "2.0.1",
    "eslint-plugin-import": "2.14.0",
    "eslint-plugin-jsx-a11y": "6.1.1",
    "eslint-plugin-react": "7.11.1",
    "file-loader": "1.1.11",
    "fs-extra": "6.0.1",
    "glob": "7.1.3",
    "graphql-cli": "2.16.7",
    "jest": "23.0.0",
    "koa-connect": "2.0.1",
    "lodash.flatten": "4.4.0",
    "lodash.omit": "4.5.0",
    "prisma": "1.8.3",
    "uglifyjs-webpack-plugin": "1.2.5",
    "webpack": "4.9.1",
    "webpack-cli": "2.1.4",
    "webpack-node-externals": "1.7.2",
    "webpack-node-server-plugin": "1.0.1",
    "webpack-serve": "1.0.2",
    "webpack-stats-plugin": "0.2.1",
    "wsrun": "2.2.1"
  }
}
