{
  "name": "wa",
  "private": true,
  "root": true,
  "author": "Dominik Ferber <dominik.ferber+npm@gmail.com> (http://dferber.de/)",
  "license": "MIT",
  "scripts": {
    "start": "concurrently --names \"client,server\" --prefix-colors \"cyan,magenta\" \"yarn client:start\" \"yarn server:start\"",
    "client:build": "webpack --config packages/client/webpack.config.prod.js",
    "client:start": "webpack-serve --config packages/client/webpack.config.dev.js",
    "server:build": "webpack --config packages/server/webpack.config.prod.js",
    "server:start": "webpack --watch --config packages/server/webpack.config.dev.js",
    "build": "rm -rf dist-production/*; NODE_ENV=production webpack --config webpack.config.prod.js",
    "postbuild": "node scripts/create-package-json.js",
    "postinstall": "node scripts/fix-node-server-plugin.js",
    "deploy": "now --public dist-production",
    "lint": "eslint packages",
    "test": "echo not implemented"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "babel-eslint": "8.2.2",
    "concurrently": "3.5.1",
    "eslint": "4.18.2",
    "eslint-config-airbnb": "16.1.0",
    "eslint-config-prettier": "2.9.0",
    "eslint-plugin-import": "2.9.0",
    "eslint-plugin-jsx-a11y": "6.0.3",
    "eslint-plugin-react": "7.7.0",
    "fs-extra": "5.0.0",
    "glob": "7.1.2",
    "lodash.flatten": "4.4.0",
    "lodash.omit": "4.5.0"
  }
}
