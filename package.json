{
  "name": "wa",
  "private": true,
  "root": true,
  "author": "Dominik Ferber <dominik.ferber+npm@gmail.com> (http://dferber.de/)",
  "license": "MIT",
  "scripts": {
    "build": "NODE_ENV=production webpack --config webpack/config.prod.js",
    "postbuild": "rm dist-production/frontend/assets/*.map",
    "build-and-run": "yarn build && yarn start:build",
    "build:client": "webpack --config webpack/config.client.prod.js",
    "build:server": "webpack --config webpack/config.server.prod.js",
    "build:api": "webpack --config webpack/config.api.prod.js",
    "cypress:open": "cypress open",
    "lint": "eslint packages cypress",
    "playground": "graphql playground",
    "prebuild": "node scripts/create-package-json.js",
    "prisma": "prisma",
    "start": "concurrently --names \"client,server,api\" --prefix-colors \"cyan,magenta,yellow\" \"yarn start:client\" \"yarn start:server\" \"yarn start:api\"",
    "cypress:start": "concurrently --names \"client,server,api\" --prefix-colors \"cyan,magenta,yellow\" \"yarn start:client\" \"yarn start:server\" \"yarn start:api:cypress\"",
    "start:client": "webpack-serve --config webpack/config.client.dev.js",
    "start:api": "webpack --watch --config webpack/config.api.dev.js",
    "start:api:cypress": "PRISMA_ENDPOINT=https://eu1.prisma.sh/dominik-ferber-4ba4fb/blogr/e2e webpack --watch --config webpack/config.api.dev.js",
    "start:server": "webpack --watch --config webpack/config.server.dev.js",
    "start:build": "concurrently --names \"api,frontend\" --prefix-colors \"cyan,magenta\" \"pushd dist-production/api; yarn start:local\" \"pushd dist-production/frontend; yarn start:local\"",
    "test": "wsrun test"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "babel-core": "6.26.0",
    "babel-eslint": "8.2.3",
    "babel-jest": "22.4.3",
    "babel-loader": "7.1.4",
    "clean-webpack-plugin": "0.1.19",
    "compression-webpack-plugin": "1.1.11",
    "concurrently": "3.5.1",
    "connect-history-api-fallback": "1.5.0",
    "copy-webpack-plugin": "4.5.1",
    "cypress": "2.1.0",
    "eslint": "4.19.1",
    "eslint-config-airbnb": "16.1.0",
    "eslint-config-prettier": "2.9.0",
    "eslint-plugin-chai-friendly": "0.4.1",
    "eslint-plugin-cypress": "2.0.1",
    "eslint-plugin-import": "2.11.0",
    "eslint-plugin-jsx-a11y": "6.0.3",
    "eslint-plugin-react": "7.7.0",
    "file-loader": "1.1.11",
    "fs-extra": "5.0.0",
    "glob": "7.1.2",
    "graphql-cli": "2.15.9",
    "jest": "22.4.3",
    "koa-connect": "2.0.1",
    "lodash.flatten": "4.4.0",
    "lodash.omit": "4.5.0",
    "uglifyjs-webpack-plugin": "1.2.4",
    "webpack": "4.6.0",
    "webpack-cli": "2.0.14",
    "webpack-node-externals": "1.7.2",
    "webpack-node-server-plugin": "1.0.0",
    "webpack-serve": "0.3.1",
    "webpack-stats-plugin": "0.2.1",
    "wsrun": "2.0.0"
  }
}
